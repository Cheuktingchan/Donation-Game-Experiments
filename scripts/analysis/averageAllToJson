#!/bin/bash

# Check if the correct number of arguments is provided
if [ "$#" -ne 2 ]; then
    echo "Usage: $0 <folder_path> <file_name>"
    exit 1
fi

folder_path="$1"
file_name="$2"

find "$folder_path" -type f -name "$file_name" | while read -r file; do
    python scripts/analysis/average_to_json.py "$file"
done

echo "Processing completed for all '$file_name' files in the folder: $folder_path"